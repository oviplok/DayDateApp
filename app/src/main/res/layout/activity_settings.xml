<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_drawable"
    tools:context=".view.activities.SettingsActivity"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/profileImageSettings"
        android:layout_gravity="center"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_marginVertical="30dp"
        android:src="@drawable/ic_action_profile" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner"
        android:hint="@string/name_edittext"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:fontFamily="@font/comfortaa"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner"
        android:layout_marginVertical="10dp"
        android:inputType="phone"
        android:hint="@string/password_edittext"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:fontFamily="@font/comfortaa"
        android:minHeight="48dp" />
    
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:onClick="confirmSettings"
        android:text="Confirm settings"
        android:fontFamily="@font/comfortaa"
        />
    <Button
        android:id="@+id/goBack_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:onClick="goToMain"
        android:text="Go back to matchng"
        android:fontFamily="@font/comfortaa"
        />



</LinearLayout>